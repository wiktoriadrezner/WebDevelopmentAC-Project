<div>
    <!-- Heading -->
    <div class="container-mxwidth">
        <section class="section-container stores-section-1">
            <h1>Stores</h1>
            <p>Find all the information about your favourite stores in town.</p>
        </section>
    </div>
    <!-- Grid -->
    <div class="container-mxwidth">
        <!-- Filters for categories -->
        <div class="filters-category">
            <div>
                <h3>Categories:</h3>
                <button onclick="filterByCategory('')">All</button>
                <button onclick="filterByCategory('Fashion')">Fashion</button>
                <button onclick="filterByCategory('Lifestyle')">Lifestyle</button>
                <button onclick="filterByCategory('Health')">Health</button>
                <button onclick="filterByCategory('Food')">Food</button>
                <button onclick="filterByCategory('Art')">Art</button>
                <button onclick="filterByCategory('Electronics')">Electronics</button>
                <button onclick="filterByCategory('Footwear')">Footwear</button>
                <button onclick="filterByCategory('Home')">Home</button>
                <button onclick="filterByCategory('Acessories')">Acessories</button>
            </div>
        </div>
        <!-- Filters for districts -->
        <div class="filters-district">
            <div>
                <h3>Districts:</h3>
                <button onclick="filterByDistrict('')">All</button>
                <button onclick="filterByDistrict('Öster')">Öster</button>
                <button onclick="filterByDistrict('Väster')">Väster</button>
                <button onclick="filterByDistrict('Tändsticksområdet')">Tändsticksområdet</button>
                <button onclick="filterByDistrict('Atollen')">Atollen</button>
                <button onclick="filterByDistrict('Resecentrum')">Resecentrum</button>
            </div>
        </div>
        <section class="section-container stores-section-2">
            <!-- Store card -->
            {{#if stores}}
                {{#each stores}}
                    <div class="store" data-category="{{category}}" data-district="{{district}}">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/7/71/Jönköpings_rådhus%2C_2018.jpg" />
                        <div class="store-content">
                            <div class="properties">
                                <!-- Category -->
                                {{#if category}}
                                    <div class="category">
                                        {{category}}
                                    </div>
                                {{/if}}
                                <!-- District -->
                                {{#if district}}
                                    <div class="district">
                                        {{district}}
                                    </div>
                                {{/if}}
                            </div>
                            <!-- Store name -->
                            <h3>{{name}}</h3>
                            <!-- Store address -->
                            <p><b>Address:</b> {{address}}</p>
                            <!-- Check for the store URL -->
                            {{#if url}}
                                {{#if (startsWith url "http://")}}
                                    <!-- If the URL starts with http:// -->
                                    <a href="{{url}}" target="_blank">Visit {{name}}</a>
                                {{else if (startsWith url "https://")}}
                                    <!-- If the URL starts with https:// -->
                                    <a href="{{url}}" target="_blank">Visit {{name}}</a>
                                {{else}}
                                    <!-- If the URL has no http:// or https://, add http:// -->
                                    <a href="http://{{url}}" target="_blank">Visit {{name}}</a>
                                {{/if}}
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <p>No stores found</p>
            {{/if}}
        </section>
    </div>
</div>